---
import skillsData from '../data/skills.json';

// Define the interfaces
interface SkillSet {
  title: string;
  skills: string[];
}

interface SkillsData {
  sets: SkillSet[];
}

const { sets }: SkillsData = skillsData;
---

<article id="skills">
  <div class="inner">
    <h2 class="animation animation--scale-in">Skills</h2>
    {sets.map((set) => (
      <section class="animation animation--fade-in">
        <h3>{set.title}</h3>
        <ul>
          {set.skills.map((skill) => (
            <li>{skill}</li>
          ))}
        </ul>
      </section>
    ))}
  </div>
</article>

<style lang="scss">
  .inner {
    display: grid;
    grid-template-columns: 1fr;
    gap: 1rem;

    @media (width >= 768px) {
      grid-template-columns: repeat(2, 1fr);
      align-items: center;
    }

    h2 {
      @media (width >= 768px) {
        grid-column: span 2;
      }
    }

    h3 {
      margin-bottom: 1.5rem;
    }

    ul {
      display: flex;
      flex-direction: column;
      gap: 1rem;
      margin-bottom: 2rem;
    }
  }
</style>
